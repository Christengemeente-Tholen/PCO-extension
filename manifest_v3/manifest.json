{
  "manifest_version": 3,
  "name": "PCO Extension",
  "version": "1.6",
  "description": "This extension adds extra functionalities to Planning center online services.",
  "icons": {
    "512": "icons/copy.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://services.planningcenteronline.com/songs/*/arrangements/*"
      ],
      "js": [
        "song.js"
      ]
    },
    {
      "matches": [
        "*://services.planningcenteronline.com/plans/*"
      ],
      "js": [
        "global.js",
        "plan.js"
      ]
    },
    {
      "matches": [
        "*://services.planningcenteronline.com/songs?*"
      ],
      "js": [
        "global.js",
        "songs.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://services.planningcenteronline.com/songs/*/arrangements/*",
    "*://api.planningcenteronline.com/services/v2/songs/*",
    "*://services.planningcenteronline.com/plans/*",
    "*://services.planningcenteronline.com/songs?*"
  ],
  "permissions": [
    "scripting",
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}